{
    "version": 2,
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/api.js"
        },
        {
            "src": "/sso-callback",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/auth-callback",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/admin",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/chat",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/albums/(?<albumId>.+)",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/.*",
            "dest": "/frontend/index.html"
        }
    ],
    "builds": [
        {
            "src": "backend/api.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ]
}