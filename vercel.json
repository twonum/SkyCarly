{
    "version": 2,
    "routes": [
        {
            "src": "/api/users",
            "dest": "/backend/routes/user.route.js"
        },
        {
            "src": "/api/admin",
            "dest": "/backend/routes/admin.route.js"
        },
        {
            "src": "/api/auth",
            "dest": "/backend/routes/auth.route.js"
        },
        {
            "src": "/api/songs",
            "dest": "/backend/routes/song.route.js"
        },
        {
            "src": "/api/albums",
            "dest": "/backend/routes/album.route.js"
        },
        {
            "src": "/api/stats",
            "dest": "/backend/routes/stat.route.js"
        },
        {
            "src": "/api/songs/(?<id>.+)",
            "dest": "/backend/routes/song.route.js"
        },
        {
            "src": "/api/albums/(?<albumId>.+)",
            "dest": "/backend/routes/album.route.js"
        },
        {
            "src": "/api/users/messages/(?<userId>.+)",
            "dest": "/backend/routes/user.route.js"
        },
        {
            "src": "/sso-callback",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/auth-callback",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/admin",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/chat",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/albums/(?<albumId>.+)",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/.*",
            "dest": "/frontend/index.html"
        }
    ],
    "builds": [
        {
            "src": "backend/**/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ]
}