{
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "backend/package.json",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "/backend/src/routes/$1"
        },
        {
            "src": "/auth/callback",
            "dest": "/api/authCallback.js"
        },
        {
            "src": "/socket.io/(.*)",
            "dest": "/backend/src/socket.io/$1"
        },
        {
            "src": "/:path*",
            "dest": "/frontend/build/index.html"
        }
    ]
}