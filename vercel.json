{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/index.js",
            "use": "@vercel/node",
            "config": {
                "maxDuration": 60
            }
        },
        {
            "src": "frontend/vite.config.js",
            "use": "@vercel/node",
            "config": {
                "maxDuration": 60
            }
        }
    ],
    "routes": [
        {
            "src": "/api/.*",
            "dest": "/api/index.js"
        }
    ],
    "env": {
        "MONGO_URI": "your_database_connection_url_here"
    },
    "builds": [
        {
            "src": "backend/src/index.js",
            "use": "@vercel/node"
        }
    ],
    "postbuild": [
        {
            "src": "backend/scripts/seedAlbums.js",
            "use": "@vercel/node"
        },
        {
            "src": "backend/scripts/seedSongs.js",
            "use": "@vercel/node"
        }
    ]
}