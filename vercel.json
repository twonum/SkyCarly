{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/node"
        },
        {
            "src": "backend/package.json",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/seed",
            "methods": [
                "POST"
            ],
            "dest": "/api/seed.js"
        }
    ],
    "env": {
        "MONGO_URI": "your-database-uri",
        "OTHER_ENV_VARS": "value"
    },
    "hooks": {
        "build": "npm run build --prefix frontend && npm run build --prefix backend",
        "deploy": "npm run seed:songs --prefix backend && npm run seed:albums --prefix backend"
    }
}