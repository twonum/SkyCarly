{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/node",
            "config": {
                "zeroConfig": true
            }
        },
        {
            "src": "backend/package.json",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/src/routes/api.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/dist/$1"
        },
        {
            "src": "/",
            "dest": "/frontend/dist/index.html"
        }
    ]
}