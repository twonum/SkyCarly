{
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "backend/package.json",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "/backend/api/$1"
        },
        {
            "src": "/auth-callback",
            "dest": "/api/authCallback.js"
        },
        {
            "src": "/sso-callback",
            "dest": "/api/auth/callback"
        },
        {
            "src": "/api/users/(.*)",
            "dest": "/backend/api/users/$1"
        },
        {
            "src": "/api/admin/(.*)",
            "dest": "/backend/api/admin/$1"
        },
        {
            "src": "/api/songs/(.*)",
            "dest": "/backend/api/songs/$1"
        },
        {
            "src": "/api/albums/(.*)",
            "dest": "/backend/api/albums/$1"
        },
        {
            "src": "/api/stats",
            "dest": "/backend/api/stats"
        }
    ]
}