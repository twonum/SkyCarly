{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/index.js",
            "use": "@vercel/node",
            "config": {
                "maxDuration": 60
            }
        },
        {
            "src": "frontend/vite.config.js",
            "use": "@vercel/static-build",
            "config": {
                "maxDuration": 60
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/frontend/dist/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "/backend/api.js"
        }
    ]
}